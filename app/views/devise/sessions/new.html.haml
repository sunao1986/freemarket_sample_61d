%body
  .single-container
    %header.single-container__header.login
      %h1
        = link_to new_user_registration_path, class: "logo" do
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?465897195", size: "193x49", alt: "mercari"
    %main.single-container__main
      .login-panel
        .login-panel__no-account
          %p アカウントをお持ちでない方はこちら
          = link_to "新規会員登録", new_user_registration_path, class: "btn-registration"
        .login-panel__form-inner.sns
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fa.fa-facebook-square
            %p Facebookでログイン  
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fa.fa-google
            %p Googleでログイン
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|     
          .login-panel__form-inner
            .form-group
              = f.email_field :email, class: "login-input-text input-default", placeholder: "メールアドレス"
            .form-group
              = f.password_field :password, class: "login-input-text input-default", placeholder: "パスワード"
            = f.submit class: "login-submit btn-default btn-red", value: "ログイン"  
            = link_to "パスワードをお忘れの方", "#", class: "forget-password"
    %footer.login-footer
      %nav
        %ul
          %li
            = link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/", class: "footer-list"
          %li
            = link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/", class: "footer-list"
          %li
            = link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/" , class: "footer-list list-bottom"
      = link_to "https://www.mercari.com/jp/", class: "single-footer-logo" do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?465897195", size: "80x65", alt: "mercari",class: "footer-image"  
      %p
        %small ©︎2019 Mercari

 